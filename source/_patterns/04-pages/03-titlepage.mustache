<div class="page" id="page">
	{{> organisms-header }}
	<div role="main">
		
		{{# hero }}
			{{> molecules-block-hero }}
		{{/ hero}}

		<section class="section">
			<h2 class="section-title">Avsnitt</h2>
			<div class="g g-4up">
				{{# episodes}}
					<div class="gi">
						{{> molecules-inset-block }}
					</div>
				{{/ episodes}}
			</div>
		</section>

		<hr />

		<div class="l-two-col">
			<div class="l-main">
				<section class="section latest-posts">
					<h2 class="section-title">Latest Posts</h2>
					<ul class="post-list">
						{{# latest-posts}}
							<li>{{> molecules-media-block }}</li>
						{{/ latest-posts}}
					</ul>
					<a href="#" class="text-btn">View more posts</a>
				</section>
			</div>

			<div class="l-sidebar">
				{{> organisms-recent-tweets }}
			</div><!--end l-sidebar-->
	</div><!--End role=main-->
	{{> organisms-footer }}
</div>